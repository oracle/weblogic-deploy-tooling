pipeline {
    agent any

    environment {
        oci_config_file_creds = 'd27ac861-e952-459b-8479-6c5a2f23655d'
        oci_signing_key_creds = '2db98e3d-8b85-4b53-9c70-73979397e6ad'
        jenkins_home_directory = '/home/jenkins'
    }

    stages {
        stage ('Alias Test Generate') {
            matrix {
                axes {
                    axis {
                        name 'WLS_VERSION'
                        values '14.1.1.0.0'
                        /*
                        values '10.3.6.0',
                               '12.1.1.0',
                               '12.1.2.0.0',
                               '12.1.3.0.0',
                               '12.2.1.0.0',
                               '12.2.1.1.0',
                               '12.2.1.2.0',
                               '12.2.1.3.0',
                               '12.2.1.3.0.210630',
                               '12.2.1.3.0.210929',
                               '12.2.1.3.0.211222',
                               '12.2.1.3.0.220329',
                               '12.2.1.3.0.220620',
                               '12.2.1.3.0.221013',
                               '12.2.1.4.0',
                               '12.2.1.4.0.210629',
                               '12.2.1.4.0.210930',
                               '12.2.1.4.0.220105',
                               '12.2.1.4.0.220329',
                               '12.2.1.4.0.220602',
                               '12.2.1.4.0.220929',
                               '14.1.1.0.0',
                               '14.1.1.0.0.210701',
                               '14.1.1.0.0.210930',
                               '14.1.1.0.0.220105',
                               '14.1.1.0.0.220329',
                               '14.1.1.0.0.220727',
                               '14.1.1.0.0.221010'
                        */
                    }
                }
                stages {
                    stage ('Generate') {
                        agent {
                            docker {
                                alwaysPull true
                                reuseNode true
                                image "phx.ocir.io/weblogick8s/wdt/jenkins-alias-test-slave:${WLS_VERSION}"
                                args '-u jenkins -v /var/run/docker.sock:/var/run/docker.sock'
                            }
                        }
                        steps {
                            sh "ls -al ${jenkins_home_directory}/.oci"
                            sh "touch ${jenkins_home_directory}/.oci/config"
                            sh "touch ${jenkins_home_directory}/.oci/oci-signing-key.pem"
                            withCredentials([file(credentialsId: "${oci_config_file_creds}", variable: 'OCI_CONFIG_FILE'),
                                             file(credentialsId: "${oci_signing_key_creds}", variable: 'OCI_SIGNING_KEY')]) {
                                // writeFile file: "${jenkins_home_directory}/.oci/config", text: readFile(OCI_CONFIG_FILE)
                                // writeFile file: "${jenkins_home_directory}/.oci/oci-signing-key.pem", text: readFile(OCI_SIGNING_KEY)
                                sh "ls -al ${jenkins_home_directory}/.oci"
                                sh "cp \$OCI_CONFIG_FILE ${jenkins_home_directory}/.oci/config"
                                sh "cp \$OCI_SIGNING_KEY ${jenkins_home_directory}/.oci/oci-signing-key.pem"
                            }
                            sh "ls -al ${jenkins_home_directory}/.oci"
                            sh 'mvn clean install -Dalias-test-skip-generate=false'
                        }
                    }
                }
            }
        }
    }
}
